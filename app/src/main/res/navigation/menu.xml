<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    app:startDestination="@id/menu2">

    <fragment
        android:id="@+id/menu2"
        android:name="com.example.databinding.menu"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menu2_to_detail"
            app:destination="@id/detail" />
        <action
            android:id="@+id/action_menu2_to_about"
            app:destination="@id/about" />
    </fragment>
    <fragment
        android:id="@+id/about"
        android:name="com.example.databinding.about"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/detail"
        android:name="com.example.databinding.detail"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" />
</navigation>